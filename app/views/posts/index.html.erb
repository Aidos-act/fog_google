<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body.to_s.gsub("googleapis","cloud.google") %></td>
        <img style="max-width: 300px;" src="<%= post.body %>">
        <% if user_signed_in? %>
          <td><%= link_to 'Show', post %></td>
          <% if current_user.admin? %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= button_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
